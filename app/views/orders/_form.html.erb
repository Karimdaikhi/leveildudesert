
<%= simple_form_for(@order, url: product_orders_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :firstname %>
    <%= f.input :adress %>
    <%= f.input :city %>
    <%= f.input :zipcode %>
    <%= f.input :comment %>
    <%= f.input :email %>
    <%= f.input :product_id, as: :hidden, input_html: {value: @product.id} %>
  </div>
<div class="col-xs-12 col-sm-6 non-padded full-height">
      <div class="right-card-products">
        <div class="right-card-content-all-products">
          <br>
          <h3 style="color:#F9C73E;" ><%= @product.name.upcase %></h3>
          <br>
          <h4><%= @product.body_zone %> / <%= @product.skin_type  %></h4>
          <br>
          <h4><%= @product.description %></h4>
          <br>
          <p><%= @product.price %> â‚¬</p>
          </div>
        </div>
      </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
